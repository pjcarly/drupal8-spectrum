<?php
function get_call_stack_mist()
{
  $stack = array();

  foreach(debug_backtrace() as $call)
  {
    $stackline = $call['function'];
    if(array_key_exists('file', $call))
    {
      $stackline .= ' '.$call['file'];
    }

    if(array_key_exists('line', $call))
    {
      $stackline .= ' ('.$call['line'].')';
    }

    $stack[] = $stackline;
  }

  return $stack;
}
